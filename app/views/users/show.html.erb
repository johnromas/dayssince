<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="col-md-4">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Profile Detail</h5>
        </div>
        <div>
          <div class="ibox-content no-padding border-left-right">
            <%= image_tag @user.photo, class: "img-circle m-t-xs img-responsive center-image" %>  
          </div>
          <div class="ibox-content profile-content">
            <h4><strong><%= @user.name %></strong></h4>
            <h5>
              About me
            </h5>
            <p>
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitat.
            </p>
            <div class="row m-t-lg">
              <div class="col-xs-4">
                <span class="bar">5,3,9,6,5,9,7,3,5,2</span>
                <h5><strong><%= @user.goals.count %></strong> Goals</h5>
              </div>
              <div class="col-xs-4">
                <span class="line">5,3,9,6,5,9,7,3,5,2</span>
                <h5><strong><%= @user.streaks.count %></strong> Streaks</h5>
              </div>
              <div class="col-xs-4">
                <span class="bar">5,3,2,-1,-3,-2,2,3,5,2</span>
                <h5><strong><%= @user.followings.count %></strong> Followers</h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="animated fadeInUp">
        <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5><%= @user.first_name %>'s Goals</h5>
        </div>
          <div class="ibox-content">
            <div class="row m-b-sm m-t-sm">
              <div class="project-list">
                <table class="table table-hover">
                  <tbody id="goal_rows">
                    <% @goals.each do |goal| %>
                    <tr id="goal_row_<%= goal.id %>">
                      <td id="goal-title-<%=goal.id%>">
                        <span><%= goal.title %></span>
                        <br/>
                        <small>Created on: <%= goal.created_at.strftime("%m/%d/%y") %></small>
                      </td>
                      <td class="goal-completion">
                        <small id="streak_count_<%= goal.id %>"><%= goal.current_record.streak %> Days</small>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>