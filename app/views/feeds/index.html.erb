<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-9">
		<h2>Activity Feed</h2>
		<ol class="breadcrumb">
			<li>
				<a href="index.html">Home</a>
			</li>
			<li class="active">
				<strong>Feed</strong>
			</li>
		</ol>
	</div>
</div>

<div class="ibox float-e-margins">
	<div class="ibox-title">
		<h5>Activites</h5>
	</div>
	<div class="ibox-content">
		<div>
			<div class="feed-activity-list">
			<% @activities.each do |activity| %>
				<div class="feed-element">
					<%= link_to user_path(activity.owner) do %>
            <%= image_tag activity.owner.photo, size: "75", class: "img-circle pull-left" %><br>  
          <% end %> 
					<div class="media-body ">
						<small class="pull-right"><%= time_ago_in_words(activity.created_at) %> ago</small>
						<%= render_activity activity %> <br>
					</div>
				</div>

				<% end %>
			</div>
		</div>
	</div>
</div>
</div>
