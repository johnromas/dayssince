<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Goal list</h2>
    <ol class="breadcrumb">
      <li>
        <a href="index.html">Home</a>
      </li>
      <li class="active">
        <strong>Goal List</strong>
      </li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">
      <div class="ibox">
        <div class="ibox-content">
          <div class="row m-b-sm m-t-sm">
            <div class="project-list">
              <table id="summary-table" class="table">
                <tr>
                  <td class="text-center"><%= @goals.count %></td>
                  <td class="text-center">11</td>
                  <td class="text-center"><%= @streaks.count %></td>
                </tr>
                <tr>
                  <td class="text-center">Goals</td>
                  <td class="text-center">Followers</td>
                  <td class="text-center">Streaks</td>
                </tr>
              </table>
              <table class="table table-hover">
                <tbody>
                  <% @goals.each do |goal| %>
                      <tr>
                        <td class="project-status">
                          <span class="label label-primary">Active</span>
                        </td>
                        <td class="project-title">
                          <%= goal.title %>
                          <br/>
                          <small>Created on: <%= goal.created_at.strftime("%m/%d/%y") %></small>
                        </td>
                        <td class="project-completion">
                          <small><%= goal.current_record.streak %> Days</small>
                          <div class="progress progress-mini">
                            <div style="width: 48%;" class="progress-bar"></div>
                          </div>
                        </td>
                        <td class="project-people">
                        </td>
                        <td class="project-actions">
                          <%= link_to(record_up_one_path(goal.current_record), class: "btn btn-white btn-sm", method: :post, remote: true, data: { status: goal.status } ) do %>
                            <i class="fa fa-check"></i> Done!
                          <% end %>
                        </td>
                      </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>